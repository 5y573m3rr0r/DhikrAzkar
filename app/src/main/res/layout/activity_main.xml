<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/purple200">


    <Button
        android:id="@+id/sokalsondharamol_button"
        android:layout_width="@dimen/universal_button_width"
        android:layout_height="@dimen/universal_button_height"
        android:layout_below="@+id/TOP_END"
        android:text="সকাল সন্ধ্যার আমল"
        android:textColor="@color/teal200"
        android:textSize="30dp" />

    <Button
        android:id="@+id/namajerporerdhikr_button"
        android:layout_width="@dimen/universal_button_width"
        android:layout_height="@dimen/universal_button_height"
        android:layout_below="@+id/TOP_END"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/sokalsondharamol_button"
        android:text="নামাজের পরের যিকির"
        android:textColor="@color/teal200"
        android:textSize="30dp" />

    <Button
        android:id="@+id/tasweehbutton_button"
        android:layout_width="@dimen/universal_button_width"
        android:layout_height="@dimen/universal_button_height"
        android:layout_below="@+id/sokalsondharamol_button"
        android:layout_marginTop="20dp"
        android:text="তাসবীহ সমূহ"
        android:textColor="@color/teal200"
        android:textSize="30dp" />

    <Button
        android:id="@+id/tasweehcounter_button"
        android:layout_width="@dimen/universal_button_width"
        android:layout_height="@dimen/universal_button_height"
        android:layout_below="@+id/namajerporerdhikr_button"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/tasweehbutton_button"
        android:text="তাসবীহ কাউন্টার"
        android:textColor="@color/teal200"
        android:textSize="30dp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ratingbar_height"
        android:layout_below="@+id/tasweehcounter_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="85dp" />

    <TextView
        android:id="@+id/rate_textView"
        android:layout_width="@dimen/textView_Wight"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginEnd="85dp"
        android:layout_marginRight="84dp"
        android:layout_marginBottom="30dp"
        android:text="Rate my work💔"
        android:textColor="@color/purple700"
        android:textSize="30dp" />


</RelativeLayout>